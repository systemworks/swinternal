<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_project_functional_area_action" model="ir.actions.act_window">
            <field name="name">functional.area</field>
            <field name="res_model">project.odoo.function</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_filter_active': 1}</field>
            <field name="help"
                   type="html">
                <p class="o_view_nocontent_smiling_face">
                    Add an Function
                </p>
            </field>
        </record>
        <record id="project_functional_area_view_tree"
                model="ir.ui.view">
            <field name="name">project.odoo.function.view.tree</field>
            <field name="model">project.odoo.function</field>
            <field name="arch"
                   type="xml">
                <tree string="Functional Area">
                    <field name="name" />
                    <field name="module_id"/>
                </tree>
            </field>
        </record>

    </data>
</odoo>

