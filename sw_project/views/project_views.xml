<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_task_inherit_view_task_form2" model="ir.ui.view">
        <field name="name">project.task.form</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form2"/>
        <field name="arch" type="xml">
            <header position="inside">
                <button string="Deploy" name="deploy_button_action" type="object" class="oe_highlight"
                        attrs="{'invisible':[('deployed_indicator','=', True)]}"/>
            </header>
            <xpath expr="//group//field[@name='parent_id']" position="attributes">
                <attribute name="attrs">{'required':[('billing_type','=','sub_task')]}</attribute>
            </xpath>
            <xpath expr="//group//field[@name='parent_id']" position="attributes">
                <attribute name="groups"/>
            </xpath>
            <xpath expr="//group//field[@name='partner_id']" position="after">
                <field name="billing_type"  attrs="{'readonly':[('deployed_indicator','=', True)]}"/>
                <field name="task_type_id" attrs="{'readonly':[('deployed_indicator','=', True)],'required':[('billing_type','=','sub_task')]}"/>
                <field name="related_module" attrs="{'readonly':[('deployed_indicator','=', True)]}"/>
                <field name="functional_area" attrs="{'readonly':[('deployed_indicator','=', True)]}"/>
                <field name="billing_status" attrs="{'readonly':[('deployed_indicator','=', True)]}"/>
                <field name="task_code" attrs="{'readonly':[('deployed_indicator','=', True)]}"/>
                <field name="git_commit_id" attrs="{'readonly':[('deployed_indicator','=', True)]}"/>
                <field name="deployed_indicator" />
            </xpath>
            <xpath expr="//group//field[@name='parent_id']" position="attributes">
                <attribute name="domain">[('project_id','=',project_id)]</attribute>
            </xpath>
            <xpath expr="//page//field//tree/field[@name='display_project_id']" position="after">
                <field name="billing_type" optional="hide"/>
                <field name="task_type_id" optional="show"/>
                <field name="related_module" optional="show"/>
                <field name="functional_area" optional="show"/>
                <field name="billing_status" optional="hide"/>
                <field name="task_code" optional="hide"/>
            </xpath>
            <div name="button_box" position="inside">
                <field name="task_log_id" invisible="1"/>
                <button name="action_task_log_view" type="object" class="oe_stat_button" icon="fa-file-text-o">
                    <field name="task_log_count" widget="statinfo" string="Logs"/>
                </button>
                <field name="bug_log_id" invisible="1"/>
                <button name="action_bug_log_view" type="object" class="oe_stat_button" icon="fa-file-text-o">
                    <field name="bug_log_count" widget="statinfo" string="Bug Logs"/>
                </button>
            </div>
        </field>
    </record>
    <record model="ir.ui.view" id="view_task_form2_inherited">
        <field name="name">project.task.form.inherited</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="hr_timesheet.view_task_form2_inherited" />
        <field name="arch" type="xml">
            <xpath expr="//label[@for='planned_hours']" position="replace">
                <label for="planned_hours" string="Planned Hours" attrs="{'invisible': [('encode_uom_in_days', '=', True)]}"/>
            </xpath>
            <xpath expr="//field[@name='planned_hours']" position="attributes">
                <attribute name="attrs">{'readonly':['|',('billing_type','in',['parent']),('is_closed','=',True)]}</attribute>
            </xpath>
            <xpath expr="//field[@name='timesheet_ids']" position="attributes">
                <attribute name="attrs">{'invisible': [('analytic_account_active', '=', False)],'readonly':['|',('billing_type','in',['parent']),('is_closed','=',True)]}</attribute>
            </xpath>
        </field>
    </record>

    <record id="edit_project" model="ir.ui.view">
    <field name="name">project.project.form</field>
    <field name="model">project.project</field>
    <field name="inherit_id" ref="project.edit_project" />
    <field name="arch" type="xml">
        <xpath expr="//page[@name='settings']" position="after">
            <page string="Stages" >
                <field name="type_ids"/>
            </page>
        </xpath>
    </field>
    </record>
</odoo>
